{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES5",
      "esModuleInterop": true,
      "baseUrl": "./src",
      "lib": ["ESNext"],
      "allowJs": false,
      "checkJs": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "sourceMap": true,
      "removeComments": true,
      "strict": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }